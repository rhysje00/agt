{
    "files.exclude": {
        "**/.git": true,
        "**/*.html": true,
        "**/*.css": true,
        "**/*.js": true
    },
    "explorer.fileNesting.enabled": true,
    "explorer.fileNesting.expand": false,
    "explorer.fileNesting.patterns": {
        "*.html": "${capture}_mj.html, ${capture}.txt",
        "*.xml": "${capture}.aux, ${capture}.bbl, ${capture}.blg, ${capture}.brf, ${capture}.idx, ${capture}.ilg, ${capture}.ind, ${capture}.log, ${capture}.out, ${capture}.pnr, ${capture}.tex,, ${capture}.toc",
        "*.pdf": "${capture}.js, ${capture}.css, ${capture}.six",
    }
}